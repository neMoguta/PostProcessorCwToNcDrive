<Window x:Class="PostProcessorGui.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:PostProcessorGui.ViewModels"
        Title="AboutWindow" Height="275" Width="389.213" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <viewModels:GeneratorViewModel x:Key="GeneratorModel"></viewModels:GeneratorViewModel>
    </Window.Resources>

    <Grid Background="#FFF3F3F3" DataContext="{StaticResource GeneratorModel}">
        <FlowDocumentScrollViewer VerticalScrollBarVisibility="Disabled" FontFamily="Italic">
            <FlowDocument FontSize="14"  >
                <Paragraph>Post processor for integration Cam Works generated tollpath programm with NcDrive.
                </Paragraph>
                <Paragraph>
                    Tested on CNC Bf20 Vario.
                    </Paragraph>
                <Paragraph/>
                    <Paragraph>
                    Programm free for any usage.
                </Paragraph>
                <Paragraph/>
                <Paragraph FontSize="11" FontFamily="Segoe Print">
                    But in any case you can always buy a
                    <Hyperlink Command="{Binding NavigateCommand}">
                        cup of coffe
                    </Hyperlink>
                    for developer.
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
